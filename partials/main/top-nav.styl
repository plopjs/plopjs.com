.partial-master-top-nav {
	fixed: top right left
	z-index: 10
	color: $clr-white
	background: rgba(4, 77, 89, 0.90)
	box-shadow: 0px 0px 5px 0 $clr-dark-gray

	.content-wrap {
		position: relative
		padding: 1.5rem 0 !important
		.big-lte & {
			padding-left: 1rem !important
		}
	}

	.nav-title {
		font-family: 'Roboto',sans-serif
		font-size: 2.4rem
		font-weight: 500
		color: $clr-white
	}

	ul {
		absolute: top right
		margin: 0
		list-style: none

		li {
			display: inline-block
			background: rgba(0, 124, 144, 0)
			transition: background 200ms

			a {
				display: inline-block
				padding: 2rem 1.5rem
				color: $clr-white
				border-bottom-width: 0px
			}

			&:hover {
				background: rgba(0, 124, 144, 1)
			}
		}
	}
}
