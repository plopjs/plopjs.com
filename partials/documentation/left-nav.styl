.partial-documentation-left-nav {
	padding: 0 20px 0 0
	margin: 0
	ul {
		padding: 0
		margin: 0
	}
	li {
		list-style: none
		margin-bottom: 10px
	}
	h4 {
		font-weight: 200;
		font-size: 20px
		margin-bottom: 15px

		a {
			display: block
			padding-bottom: 5px
			border-bottom-width: 2px
			border-bottom-color: $clr-light-gray
			&:hover, &:active {
				border-bottom-color: $clr-primary
			}
		}

		&:first-child {
			margin-top: 0
		}
	}
}
